<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.information.ResultRevisionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_blue"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.google.android.material.textview.MaterialTextView
                style="@style/WhiteHeaderForBrightBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="8dp"
                android:text="@string/ResultTextHeader" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                style="@style/BlackHeaderForLightBackMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MainStatsText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/BlackHeaderForLightBackMedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TrainInfoText" />

                <TextView
                    android:id="@+id/revision_train_info"
                    style="@style/RegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    style="@style/BlackHeaderForLightBackMedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MainTrainText" />


                <TextView
                    android:id="@+id/revision_main_train_stats_text_view"
                    style="@style/RegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    style="@style/BlackHeaderForLightBackMedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TrailingGroupText" />

                <TextView
                    android:id="@+id/revision_trailing_stats_text_view"
                    style="@style/RegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                style="@style/BlackHeaderForLightBackMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ViolationsText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/BlackHeaderForLightBackMedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MainTrainText" />

                <TextView
                    android:id="@+id/revision_main_train_violations_text_view"
                    style="@style/RegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    style="@style/BlackHeaderForLightBackMedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TrailingGroupText" />

                <TextView
                    android:id="@+id/revision_trailing_violations_text_view"
                    style="@style/RegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/revision_end_revision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/EndWorkTextDescription"
                android:src="@drawable/ic_exit_48_white"
                app:backgroundTint="@color/dark_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@null" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>