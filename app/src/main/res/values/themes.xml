<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RevHelper" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RevHelper" parent="Base.Theme.RevHelper">
        <item name="android:fontFamily">@font/fsrail55</item>
        <item name="popupMenuStyle">@style/CustomPopupMenuStyle</item>
    </style>

    <style name="Theme.RevHelper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoundedDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item> <!-- Устанавливаем ширину диалога -->
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="CustomPopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_menu_item</item>
    </style>

    <style name="CustomTextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Цвет границы -->
        <item name="boxStrokeColor">@color/grey_corp</item>
        <!-- Цвет текста подсказки (hint) -->
        <item name="hintTextColor">@color/black</item>
        <!-- Цвет фона текстового поля -->
        <item name="boxBackgroundColor">@color/white</item>
        <!-- Цвет текста -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomSpinnerWithBorder">
        <item name="android:background">@drawable/spinner_border</item>  <!-- Добавление рамки -->
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!-- Задаем цвет текста -->
        <item name="android:textColor">@color/black</item>
        <!-- Задаем цвет фона для раскрытого списка -->
        <item name="android:popupBackground">@android:color/white</item>
        <!-- Задаем размер текста -->
        <item name="android:textSize">16sp</item>
        <!-- Дополнительные настройки -->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <!-- Убираем фоновый цвет, чтобы не закрывал текст -->
        <!--<item name="android:background">@android:color/white</item>-->
        <!-- Устанавливаем контрастный цвет фона -->
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:background">@drawable/spinner_border</item>
    </style>

    <style name="Theme.RevHelper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RevHelper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <!-- Цвет фона -->
        <item name="android:backgroundTint">@color/corporate_red</item>
        <!-- Цвет текста -->
        <item name="android:textColor">@color/white</item>
        <!-- Размер текста -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/fsrail75</item>
    </style>

    <style name="CustomTheme">
        <item name="android:fontFamily">@font/fsrail75</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomTextTheme">
        <item name="android:fontFamily">@font/fsrail55</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="WhiteHeaderForBrightBack">
        <item name="android:fontFamily">@font/fsrail75</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlackHeaderForLightBack">
        <item name="android:fontFamily">@font/fsrail75</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlackHeaderForLightBackMedium">
        <item name="android:fontFamily">@font/fsrail75</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/fsrail55</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>